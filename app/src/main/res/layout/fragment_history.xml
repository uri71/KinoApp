<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              tools:context="com.mozidev.kino.fragments.HistoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/horizontal_padding"
            android:paddingRight="@dimen/horizontal_padding"
            android:paddingBottom="32dp"
            >

            <TextView
                android:id="@+id/biography"
                style="@style/TextViewHistoryTitle"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/biography"/>

            <TextView

                style="@style/TextViewHistory"
                android:text="@string/biography_text"/>

            <TextView
                android:id="@+id/snipers"
                style="@style/TextViewHistoryTitle"
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_marginTop="16dp"
                android:text="@string/about_snipers_title"/>

            <TextView

                style="@style/TextViewHistory"
                android:text="@string/about_snipers"/>

            <TextView
                android:id="@+id/snipers_guns"
                android:layout_marginTop="16dp"
                style="@style/TextViewHistoryTitle"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/snipers_gun_title"/>

            <TextView

                style="@style/TextViewHistory"
                android:text="@string/snipers_gun"/>

            <TextView
                android:id="@+id/gallery"
                android:layout_marginTop="16dp"
                style="@style/TextViewHistoryTitle"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/gallery"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
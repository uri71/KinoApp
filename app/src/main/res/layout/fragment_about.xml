<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_story"
              android:orientation="vertical"
              android:paddingTop="32dp"
              tools:context="com.mozidev.kino.fragments.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="О фильме"
            android:textAllCaps="true"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:background="@drawable/edge_transparent_top"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:background="@drawable/edge_transparent_bottom"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Интересные факты"
            android:textAllCaps="true"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ListView
                android:id="@+id/lv_facts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:background="@drawable/edge_transparent_top"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:background="@drawable/edge_transparent_bottom"/>

        </FrameLayout>
    </LinearLayout>
</LinearLayout>

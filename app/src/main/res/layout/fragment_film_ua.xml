<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primary"
        android:gravity="bottom"
        android:paddingBottom="4dp"
        app:navigationIcon="@drawable/ic_toolbar_arrow_left"
        app:popupTheme="?toolbarStyle"
        app:title="FILM UA"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/film_ua_logo"/>
            <TextView
                style="@style/TextViewCompanyItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/about_company"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="Основные направления"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/text_second"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/comp_prodaction"
                style="@style/TextViewCompanyItem"
                android:layout_marginTop="16dp"
                android:text="PRODUCTION"/>

            <TextView
                android:id="@+id/comp_distribution"
                style="@style/TextViewCompanyItem"
                android:text="DISTRIBUTION"/>

            <TextView
                android:id="@+id/comp_television"
                style="@style/TextViewCompanyItem"
                android:text="TELEVISION"/>

            <TextView
                android:id="@+id/comp_postprodaction"
                style="@style/TextViewCompanyItem"
                android:text="POSTPRODUCTION"/>

            <TextView
                android:id="@+id/comp_studio"
                style="@style/TextViewCompanyItem"
                android:text="STUDIO"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="Наша продукция"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/text_second"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/comp_films"
                style="@style/TextViewCompanyItem"
                android:text="КАТАЛОГ"/>

            <TextView
                android:id="@+id/comp_new_films"
                style="@style/TextViewCompanyItem"
                android:text="НАШИ НОВИНКИ"/>

            <TextView
                android:id="@+id/comp_soon"
                style="@style/TextViewCompanyItem"
                android:text="СКОРО НА ЭКРАНАХ"/>

            <TextView
                android:id="@+id/comp_education"
                style="@style/TextViewCompanyItem"
                android:text="ОБРАЗОВАТЕЛЬНЫЕ ПРОЕКТЫ"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
